    return this.fieldType || (this.fieldType = (function() {
      switch (this.type) {
        case &quot;integer&quot;:
          return &quot;numberField&quot;;
        case &quot;float&quot;:
        case &quot;decimal&quot;:
          return &quot;textField&quot;;
        case &quot;time&quot;:
          return &quot;timeSelect&quot;;
        case &quot;datetime&quot;:
        case &quot;timestamp&quot;:
          return &quot;datetimeSelect&quot;;
        case &quot;date&quot;:
          return &quot;dateSelect&quot;;
        case &quot;text&quot;:
          return &quot;textArea&quot;;
        case &quot;boolean&quot;:
          return &quot;checkBox&quot;;
        default:
          return &quot;textField&quot;;
      }
    }).call(this));
  }"
  
