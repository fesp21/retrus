<?xml version="1.0" encoding="UTF-8"?>
<Module>
  <ModulePrefs title="retr.us Standup Assistant" height="100" width="550">
  <Require feature="dynamic-height"/>
  <Require feature="rpc"/>
</ModulePrefs>
<Content type="html"><![CDATA[
  <!DOCTYPE html>
  <script src="//talkgadget.google.com/hangouts/_/api/hangout.js?v=1.2"></script>
  <form action="javascript:void(0)" id="group-form">
    <input type="text" id="group-form-id" placeholder="retrus group id" />
  </form>
  <div id="retrus-container">
  </div>
  <script type="text/javascript">
    $("#group-form").submit(function(){
      var iframe = "<iframe height='100%' src='http://retr.us/group/";
      iframe += $("#group-form-id").val();
      iframe += "/standup' ></iframe>"

      $("#retrus-container").html(iframe);
    });
  </script>
]]></Content>
</Module>

